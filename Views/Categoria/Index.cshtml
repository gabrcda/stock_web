@model IEnumerable<CategoriaModel>
@{
    ViewBag.Subtitulo = "Listagem de Categorias";
}

<header>
    <h1>Listagem de Categorias</h1>
    <hr>
    <button><a asp-action="Cadastrar">Nova Categoria</a></button>
</header>
<hr>
<partial name="_Mensagem"></partial>

@if (Model.Count() > 0)
{
    <table border="1">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nome</td>
                    <td>
                        <button><a asp-action="Cadastrar" asp-route-id="@categoria.IdCategoria">Alterar</a></button>
                        <button><a asp-action="Excluir" asp-route-id="@categoria.IdCategoria">Excluir</a></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma categoria cadastrada</p>
}